<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE HLScheme>
<HLScheme>
	<scheme name="HTML" extensions="htm;html">
		<rule>
			<expr>([\w\-]+ *=)</expr>
			<style color="#006600" />
		</rule>
		<rule>
			<expr caseSensitive="0">&lt;\/?(a|address|b|blockquote|body|br|center|code|dd|div|dl|dt|em|embed|font|frame|frameset|h[1-6]|head|hr|html|i|iframe|img|li|noframes|ol|p|pre|strong|table|td|th|title|tr|tt|ul|form|input|select|span|option|tbody|textarea|meta|link|style|script|noscript)\b</expr>
			<style entry="1" color="#000066" bold="true" />
		</rule>
		<rule>
			<expr>&amp;[\w\#]+\;</expr>
			<style color="#0000cc" />
		</rule>
		<rule>
			<expr caseSensitive="0">&lt;(\!doctype)\b</expr>
			<style entry="1" color="#900090" bold="true" />
		</rule>
		<block name="str1">
			<begin>"</begin>
			<end>"</end>
			<style color="#cc0000" />
		</block>
		<block name="str2">
			<begin>'</begin>
			<end>'</end>
			<style color="#cc0000" />
		</block>
		<block name="cmnt" regExp="true" >
			<begin>&lt;\!\-\-</begin>
			<end>\-\-&gt;</end>
			<style color="#999999" italic="true" />
		</block>
	</scheme>
	
</HLScheme>
