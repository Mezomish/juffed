<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE HLScheme>
<HLScheme>

<scheme name="Makefile" fileMask="*Makefile*" >
	<rule>
		<expr>^[\s\t]*(\w+\=)[\s\t]*(?![\s\t])(.*)</expr>
		<style entry="1" color="#990000" />
		<style entry="2" color="#cc0000" />
	</rule>
	<rule>
		<expr>^[\s\t]*[\w\/\s]+\:</expr>
		<style color="#0000cc" />
	</rule>
	<rule>
		<expr>\$\(\w+\)</expr>
		<style color="#990099" />
	</rule>
	<comment>
		<begin>#</begin>
		<style color="#999999" italic="true" />
	</comment>
</scheme>

</HLScheme>
